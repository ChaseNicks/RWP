<div class="card">
  <div class="card-content columns">
        <div class="column is-1">
            <a><img class="upVote-arrow" src="/images/up.png" data-id="{{id}}"></a>
            <p class="vote">{{upvotes}}</p>
            <a><img class="downVote-arrow" src="/images/down.png" data-id="{{id}}"></a>
        </div>
        <div class="column">
            <div class="media">
            <div class="media-center ">
               
                <figure class="image is-48x48 ">
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image" />
                </figure>
                
            </div>
        </div>
        <p class="subtitle is-4 has-text-weight-bold has-text-left"><a href="/dashboard/edit/{{id}}">{{title}}</a></p>
        <div class="content has-text-left">
            <p>{{content}}</p>
        </div>
        </div>
    </div>
    <footer class="card-footer">
        <a href="#" class="card-footer-item">Tags: {{tag.category}}</a>
        <a href="#" class="card-footer-item">Posted On: {{format_date date_created}}</a>
        <a href="#" class="card-footer-item">Posted by: {{user.username}}</a>
        <a href="#" class="card-footer-item">{{comments.length}} comment</a>
    </footer>
</div>