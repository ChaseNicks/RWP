<div class="card mt-6 user-card">
    <div class="card-content user-card-content">
        <div class="media">
            <div class="media-center">
                <figure class="image is-48x48">
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image" />
                </figure>
            </div>
        </div>
        <p class="subtitle is-4 has-text-weight-bold has-text-center">{{username}}</p>

        <div class="content has-text-center">
            {{#each bios as |bio| }}
            {{>bio user}}
            {{/each}}
            <p>USER BIO{{bio}}</p>

        </div>
    </div>
    <footer class="card-footer">
        <a href="#" class="card-footer-item user-footer">Contact: {{email}}</a>
        <a href="#" class="card-footer-item user-footer"><i class="fab fa-github"> </i>{{github}}</a>
    </footer>
</div>